# Order Hub Environment Configuration
# Copy this file to .env and fill in your values

# Database Connection
ConnectionStrings__Default=Host=localhost;Port=5432;Database=order_hub;Username=postgres;Password=your_password;SSL Mode=Prefer;Trust Server Certificate=true

# Security - Generate with: openssl rand -base64 32
SITE_SECRETS_KEY=your_32_byte_base64_encryption_key_here

# Admin Authentication
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=SecurePassword123!

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# Logging
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Microsoft=Warning
Serilog__MinimumLevel__Microsoft.EntityFrameworkCore.Database.Command=Information

# CORS (comma-separated list)
AllowedOrigins=https://yourdomain.com,https://www.yourdomain.com

# Optional: External Services
# REDIS_CONNECTION_STRING=localhost:6379
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
