<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Order Hub Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: #2c3e50;
        }
        .sidebar .nav-link {
            color: #ecf0f1;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover {
            background: #34495e;
            color: #fff;
        }
        .sidebar .nav-link.active {
            background: #3498db;
            color: #fff;
        }
        .main-content {
            padding: 2rem;
        }
        .navbar-brand {
            font-weight: bold;
            color: #2c3e50 !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <h4 class="text-white">Order Hub</h4>
                        <small class="text-muted">Admin Panel</small>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Dashboard" ? "active" : "")" 
                               asp-page="/Admin/Dashboard">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Sites" ? "active" : "")" 
                               asp-page="/Admin/Sites">
                                <i class="bi bi-globe me-2"></i>
                                Sites
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/OrdersV2" ? "active" : "")" 
                               asp-page="/Admin/OrdersV2">
                                <i class="bi bi-cart-check me-2"></i>
                                Orders V2
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/RawData" ? "active" : "")" 
                               asp-page="/Admin/RawData">
                                <i class="bi bi-code-slash me-2"></i>
                                Raw Data
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Reports" ? "active" : "")" 
                               asp-page="/Admin/Reports">
                                <i class="bi bi-graph-up me-2"></i>
                                Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Partners" ? "active" : "")" 
                               asp-page="/Admin/Partners">
                                <i class="bi bi-people me-2"></i>
                                Partners
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/SitePartners" ? "active" : "")" 
                               asp-page="/Admin/SitePartners">
                                <i class="bi bi-link-45deg me-2"></i>
                                Site-Partner Assignments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/PartnerRevenue" ? "active" : "")" 
                               asp-page="/Admin/PartnerRevenue">
                                <i class="bi bi-chart-line me-2"></i>
                                Partner Revenue Reports
                            </a>
                        </li>
                                            <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/ProfitManagement" ? "active" : "")"
                           asp-page="/Admin/ProfitManagement">
                            <i class="bi bi-calculator me-2"></i>
                            Profit Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/PaymentGatewayDetails" ? "active" : "")"
                           asp-page="/Admin/PaymentGatewayDetails">
                            <i class="bi bi-credit-card me-2"></i>
                            Payment Gateway Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/GatewayPartners" ? "active" : "")"
                           asp-page="/Admin/GatewayPartners">
                            <i class="bi bi-handshake me-2"></i>
                            Gateway Partners
                        </a>
                    </li>
                                                                        <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/GatewayPartnerRevenue" ? "active" : "")"
                                   asp-page="/Admin/GatewayPartnerRevenue">
                                    <i class="bi bi-chart-line me-2"></i>
                                    Gateway Partner Revenue
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/ShipmentManagement" ? "active" : "")"
                                   asp-page="/Admin/ShipmentManagement">
                                    <i class="bi bi-truck me-2"></i>
                                    Shipment Management
                                </a>
                            </li>
                                                    

                    </ul>
                    
                    <hr class="text-muted">
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-page="/Admin/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        @RenderSection("Toolbar", required: false)
                    </div>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
