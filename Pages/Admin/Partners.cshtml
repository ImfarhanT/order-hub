@page
@model HubApi.Pages.Admin.PartnersModel
@{
    ViewData["Title"] = "Partners Management";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Partners Management</h1>
        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addPartnerModal">
            <i class="fas fa-plus fa-sm"></i> Add New Partner
        </button>
    </div>

    <!-- Partners List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Partners</h6>
        </div>
        <div class="card-body">
            @if (Model.Partners.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="partnersTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Share Type</th>
                                <th>Percentage</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var partner in Model.Partners)
                            {
                                <tr>
                                    <td>@partner.Name</td>
                                    <td>@partner.Email</td>
                                    <td>@partner.Phone</td>
                                    <td>
                                        <span class="badge badge-@(partner.ShareType == "Profit" ? "success" : "info")">
                                            @partner.ShareType
                                        </span>
                                    </td>
                                    <td>@partner.SharePercentage%</td>
                                    <td>
                                        <span class="badge badge-@(partner.IsActive ? "success" : "secondary")">
                                            @(partner.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" onclick="editPartner('@partner.Id')">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deletePartner('@partner.Id')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                    <p class="text-gray-500">No partners found. Add your first partner to get started!</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add/Edit Partner Modal -->
<div class="modal fade" id="addPartnerModal" tabindex="-1" role="dialog" aria-labelledby="addPartnerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPartnerModalLabel">Add New Partner</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="partnerForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="partnerId" name="Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerName">Partner Name *</label>
                                <input type="text" class="form-control" id="partnerName" name="Name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerEmail">Email *</label>
                                <input type="email" class="form-control" id="partnerEmail" name="Email" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerPhone">Phone</label>
                                <input type="tel" class="form-control" id="partnerPhone" name="Phone">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerCompany">Company</label>
                                <input type="text" class="form-control" id="partnerCompany" name="Company">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="shareType">Share Type *</label>
                                <select class="form-control" id="shareType" name="ShareType" required>
                                    <option value="">Select Share Type</option>
                                    <option value="Profit">Profit Share</option>
                                    <option value="Revenue">Revenue Share</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="sharePercentage">Share Percentage *</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="sharePercentage" name="SharePercentage" 
                                           min="0" max="100" step="0.01" required>
                                    <div class="input-group-append">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerAddress">Address</label>
                                <textarea class="form-control" id="partnerAddress" name="Address" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="partnerNotes">Notes</label>
                                <textarea class="form-control" id="partnerNotes" name="Notes" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="isActive" name="IsActive" checked>
                            <label class="custom-control-label" for="isActive">Active Partner</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Partner</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deletePartnerModal" tabindex="-1" role="dialog" aria-labelledby="deletePartnerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePartnerModalLabel">Delete Partner</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this partner? This action cannot be undone.</p>
                <input type="hidden" id="deletePartnerId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeletePartner()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            if ($('#partnersTable tbody tr').length > 0) {
                $('#partnersTable').DataTable({
                    responsive: true,
                    order: [[0, 'asc']]
                });
            }
            
            // Form submission
            $('#partnerForm').on('submit', function(e) {
                e.preventDefault();
                submitPartner();
            });
        });
        
        function editPartner(partnerId) {
            // Fetch partner data and populate form
            fetch(`/api/partners/${partnerId}`)
                .then(response => response.json())
                .then(partner => {
                    $('#partnerId').val(partner.id);
                    $('#partnerName').val(partner.name);
                    $('#partnerEmail').val(partner.email);
                    $('#partnerPhone').val(partner.phone);
                    $('#partnerCompany').val(partner.company);
                    $('#shareType').val(partner.shareType);
                    $('#sharePercentage').val(partner.sharePercentage);
                    $('#partnerAddress').val(partner.address);
                    $('#partnerNotes').val(partner.notes);
                    $('#isActive').prop('checked', partner.isActive);
                    
                    $('#addPartnerModalLabel').text('Edit Partner');
                    $('#addPartnerModal').modal('show');
                })
                .catch(error => {
                    console.error('Error fetching partner:', error);
                    alert('Error loading partner data');
                });
        }
        
        function deletePartner(partnerId) {
            $('#deletePartnerId').val(partnerId);
            $('#deletePartnerModal').modal('show');
        }
        
        function confirmDeletePartner() {
            const partnerId = $('#deletePartnerId').val();
            
            fetch(`/api/partners/${partnerId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error deleting partner');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting partner');
            });
        }
        
        function submitPartner() {
            const formData = new FormData($('#partnerForm')[0]);
            const partnerData = Object.fromEntries(formData.entries());
            
            // Handle checkbox value
            partnerData.isActive = $('#isActive').is(':checked');
            
            const partnerId = $('#partnerId').val();
            const method = partnerId ? 'PUT' : 'POST';
            const url = partnerId ? `/api/partners/${partnerId}` : '/api/partners';
            
            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(partnerData)
            })
            .then(response => {
                if (response.ok) {
                    $('#addPartnerModal').modal('hide');
                    location.reload();
                } else {
                    alert('Error saving partner');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error saving partner');
            });
        }
        
        // Reset form when modal is closed
        $('#addPartnerModal').on('hidden.bs.modal', function () {
            $('#partnerForm')[0].reset();
            $('#partnerId').val('');
            $('#addPartnerModalLabel').text('Add New Partner');
        });
    </script>
}
